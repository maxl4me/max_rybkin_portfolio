/* ========= Base & Reset ========= */

*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  min-height: 100vh;
  background:
    radial-gradient(circle at top, #0f172a 0, #020617 45%, #020617 100%);
  color: #e5e7eb;
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
}

img {
  max-width: 100%;
  display: block;
}

a {
  color: inherit;
}

/* Container */

.container {
  width: min(1120px, 100% - 2.5rem);
  margin: 0 auto;
}

/* ========= Header ========= */

.site-header {
  position: sticky;
  top: 0;
  z-index: 30;
  background: linear-gradient(
    to bottom,
    rgba(2, 6, 23, 0.96),
    rgba(2, 6, 23, 0.9)
  );
  backdrop-filter: blur(16px);
  border-bottom: 1px solid rgba(56, 189, 248, 0.4);
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 14px 0;
}

/* Logo */

.logo {
  display: inline-flex;
  flex-direction: column;
  gap: 4px;
  text-decoration: none;
}

.logo-main {
  font-family: "Space Grotesk", system-ui, sans-serif;
  font-size: 1.5rem;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  color: #e5e7eb;
}

.logo-sub {
  font-size: 0.8rem;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  color: #38bdf8;
}

/* Navigation */

.nav {
  display: flex;
  align-items: center;
  gap: 16px;
}

.nav a {
  font-size: 0.8rem;
  font-family: "Space Grotesk", system-ui, sans-serif;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  text-decoration: none;
  color: #cbd5f5;
  padding: 4px 2px;
  border-bottom: 1px solid transparent;
  transition:
    color 0.18s ease-out,
    border-color 0.18s ease-out,
    transform 0.12s ease-out;
}

.nav a:hover {
  color: #38bdf8;
  border-color: #38bdf8;
  transform: translateY(-1px);
}

/* ========= Hero ========= */

.hero {
  padding: 72px 0 56px;
  background:
    radial-gradient(circle at 0% 0%, rgba(56, 189, 248, 0.35) 0, transparent 45%),
    radial-gradient(circle at 100% 0%, rgba(59, 130, 246, 0.3) 0, transparent 50%),
    #020617;
}

.hero-inner {
  display: grid;
  grid-template-columns: minmax(0, 1.6fr) minmax(0, 1.1fr);
  gap: 40px;
  align-items: center;
}

/* Hero text */

.hero-eyebrow {
  font-size: 0.8rem;
  letter-spacing: 0.24em;
  text-transform: uppercase;
  color: #7dd3fc;
  margin: 0 0 10px;
}

.hero-title {
  font-family: "Space Grotesk", system-ui, sans-serif;
  font-size: 2.2rem;
  line-height: 1.2;
  margin: 0 0 12px;
  color: #f9fafb;
}

.hero-subtitle {
  margin: 0 0 8px;
  font-size: 0.98rem;
  color: #e5e7eb;
}

.hero-body {
  margin: 0 0 20px;
  font-size: 0.95rem;
  color: #cbd5f5;
  max-width: 36rem;
}

.hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 16px;
}

/* Buttons */

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 9px 16px;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.8);
  font-size: 0.8rem;
  font-family: "Space Grotesk", system-ui, sans-serif;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  text-decoration: none;
  cursor: pointer;
  background: transparent;
  color: #e5e7eb;
  transition:
    background 0.18s ease-out,
    color 0.18s ease-out,
    border-color 0.18s ease-out,
    box-shadow 0.18s ease-out,
    transform 0.12s ease-out;
}

.btn-primary {
  background: linear-gradient(135deg, #0ea5e9, #22d3ee);
  border-color: transparent;
  color: #020617;
  box-shadow: 0 0 26px rgba(56, 189, 248, 0.55);
}

.btn-primary:hover {
  box-shadow: 0 0 40px rgba(56, 189, 248, 0.8);
  transform: translateY(-1px);
}

.btn-outline {
  border-color: #38bdf8;
}

.btn-outline:hover {
  background: rgba(15, 23, 42, 0.9);
  box-shadow: 0 0 24px rgba(56, 189, 248, 0.4);
  transform: translateY(-1px);
}

.btn-ghost {
  border-style: dashed;
  border-color: rgba(148, 163, 184, 0.8);
}

.btn-ghost:hover {
  background: rgba(15, 23, 42, 0.9);
  border-style: solid;
  box-shadow: 0 0 22px rgba(148, 163, 184, 0.45);
}

/* Hero meta */

.hero-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  font-size: 0.8rem;
  color: #9ca3af;
}

.hero-meta span::before {
  content: "â€¢ ";
}

/* Hero aside */

.hero-aside {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 18px;
}

/* Neon photo frame */

.hero-photo-frame {
  position: relative;
  width: 210px;
  height: 210px;
  border-radius: 24px;
  padding: 3px;
  background: radial-gradient(circle at 0 0, #38bdf8, transparent 55%),
              radial-gradient(circle at 100% 100%, #22d3ee, transparent 55%);
  box-shadow:
    0 0 40px rgba(56, 189, 248, 0.45),
    0 18px 40px rgba(15, 23, 42, 0.9);
}

.hero-photo-glow {
  position: absolute;
  inset: 6px;
  border-radius: 20px;
  background: radial-gradient(circle at 20% 0%, rgba(56, 189, 248, 0.35), transparent 60%),
              radial-gradient(circle at 80% 100%, rgba(59, 130, 246, 0.35), transparent 60%);
  opacity: 0.6;
  filter: blur(12px);
}

.hero-photo {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 20px;
  object-fit: cover;
  filter: grayscale(8%);
}

/* Hero card */

.hero-card {
  width: 100%;
  max-width: 280px;
  border-radius: 18px;
  padding: 14px 16px;
  background: radial-gradient(circle at 0 0, rgba(15, 23, 42, 0.98), #020617);
  border: 1px solid rgba(56, 189, 248, 0.6);
  box-shadow:
    0 0 26px rgba(56, 189, 248, 0.35),
    0 14px 32px rgba(15, 23, 42, 0.85);
}

.hero-card-label {
  margin: 0 0 4px;
  font-size: 0.76rem;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  color: #7dd3fc;
}

.hero-card-title {
  margin: 0 0 6px;
  font-size: 0.98rem;
  font-weight: 500;
  color: #e5e7eb;
}

.hero-card-body {
  margin: 0;
  font-size: 0.88rem;
  color: #cbd5f5;
}

/* ========= Sections ========= */

.section {
  padding: 56px 0;
  background: #020617;
}

.section-alt {
  background: radial-gradient(circle at 50% 0, rgba(15, 23, 42, 0.7), #020617 60%);
  border-top: 1px solid rgba(30, 64, 175, 0.4);
  border-bottom: 1px solid rgba(15, 23, 42, 0.9);
}

.section-header {
  margin-bottom: 20px;
}

.section-title {
  font-family: "Space Grotesk", system-ui, sans-serif;
  font-size: 1.4rem;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  margin: 0 0 6px;
  color: #e5e7eb;
}

.section-subtitle {
  margin: 0;
  font-size: 0.9rem;
  color: #9ca3af;
}

/* Cards & Grids */

.card-grid {
  display: grid;
  gap: 20px;
}

.about-grid {
  grid-template-columns: minmax(0, 1.4fr) minmax(0, 1.4fr) minmax(0, 1fr);
}

.skills-grid {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.experience-grid {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.card {
  border-radius: 16px;
  background: rgba(15, 23, 42, 0.95);
  border: 1px solid rgba(30, 64, 175, 0.7);
  padding: 14px 16px;
  box-shadow: 0 12px 26px rgba(15, 23, 42, 0.85);
}

.card-title {
  margin: 0 0 8px;
  font-size: 1rem;
  color: #e5e7eb;
}

.card-body {
  margin: 0;
  font-size: 0.9rem;
  color: #cbd5f5;
}

/* List */

.list {
  list-style: none;
  padding: 0;
  margin: 0;
  font-size: 0.9rem;
  color: #cbd5f5;
}

.list li + li {
  margin-top: 4px;
}

/* Pill list */

.pill-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.pill-list li {
  font-size: 0.8rem;
  padding: 5px 10px;
  border-radius: 999px;
  border: 1px solid rgba(56, 189, 248, 0.4);
  background: rgba(15, 23, 42, 0.9);
  color: #e0f2fe;
  white-space: nowrap;
}

/* Experience meta */

.card-meta {
  margin-bottom: 8px;
}

.card-meta-main {
  display: block;
  font-size: 0.96rem;
  font-weight: 500;
  color: #e5e7eb;
}

.card-meta-sub {
  display: block;
  font-size: 0.8rem;
  color: #9ca3af;
}

/* Education & Service */

.grid-two {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 18px;
  margin-top: 28px;
}

.subsection-title {
  margin: 0 0 6px;
  font-size: 0.95rem;
  font-weight: 500;
  color: #e5e7eb;
}

.subsection-body {
  margin: 0;
  font-size: 0.9rem;
  color: #cbd5f5;
}

/* Contact */

.contact-card {
  margin-top: 10px;
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 20px;
  align-items: center;
}

.contact-label {
  margin: 0 0 4px;
  font-size: 0.9rem;
  color: #e5e7eb;
}

.contact-link {
  font-size: 0.9rem;
  color: #38bdf8;
  text-decoration: none;
}

.contact-link:hover {
  text-decoration: underline;
}

.contact-text {
  margin: 0;
  font-size: 0.9rem;
  color: #cbd5f5;
}

.contact-social {
  display: flex;
  justify-content: flex-end;
}

.linkedin-circle {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 999px;
  border: 1px solid rgba(56, 189, 248, 0.6);
  background: rgba(15, 23, 42, 0.95);
  text-decoration: none;
  box-shadow: 0 0 22px rgba(56, 189, 248, 0.4);
  transition:
    box-shadow 0.18s ease-out,
    transform 0.12s ease-out,
    background 0.18s ease-out;
}

.linkedin-circle:hover {
  box-shadow: 0 0 34px rgba(56, 189, 248, 0.85);
  background: #020617;
  transform: translateY(-1px);
}

/* ========= Footer ========= */

.site-footer {
  background: #020617;
  border-top: 1px solid rgba(30, 64, 175, 0.7);
  padding: 14px 0 18px;
}

.footer-inner {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 10px;
  font-size: 0.85rem;
  color: #9ca3af;
}

.footer-note {
  font-size: 0.8rem;
}

/* ========= Back to Top ========= */

.back-to-top {
  position: fixed;
  bottom: 22px;
  right: 22px;
  width: 42px;
  height: 42px;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.7);
  background: radial-gradient(circle at 30% 0, #38bdf8, #020617 60%);
  color: #e5e7eb;
  font-size: 1.2rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 0 22px rgba(56, 189, 248, 0.55),
    0 10px 26px rgba(15, 23, 42, 0.9);
  opacity: 0;
  pointer-events: none;
  transition:
    opacity 0.2s ease-out,
    transform 0.15s ease-out,
    box-shadow 0.18s ease-out;
  z-index: 40;
}

.back-to-top span {
  transform: translateY(-1px);
}

.back-to-top--visible {
  opacity: 1;
  pointer-events: auto;
}

.back-to-top:hover {
  transform: translateY(-2px);
  box-shadow:
    0 0 32px rgba(56, 189, 248, 0.9),
    0 14px 32px rgba(15, 23, 42, 1);
}

/* ========= Responsive ========= */

@media (max-width: 960px) {
  .hero-inner {
    grid-template-columns: minmax(0, 1fr);
    gap: 32px;
  }

  .hero-aside {
    align-items: flex-start;
  }

  .about-grid,
  .skills-grid,
  .experience-grid {
    grid-template-columns: minmax(0, 1fr);
  }

  .grid-two {
    grid-template-columns: minmax(0, 1fr);
  }

  .contact-grid {
    grid-template-columns: minmax(0, 1fr);
  }

  .contact-social {
    justify-content: flex-start;
  }

  .footer-inner {
    flex-direction: column;
    align-items: flex-start;
  }
}

@media (max-width: 720px) {
  .header-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  .nav {
    flex-wrap: wrap;
    row-gap: 4px;
  }
}

@media (max-width: 480px) {
  .container {
    width: min(100% - 1.5rem, 100%);
  }

  .hero {
    padding: 56px 0 44px;
  }

  .hero-title {
    font-size: 1.8rem;
  }
}
